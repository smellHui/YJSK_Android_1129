<resources>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e8e8e8</item>
    </style>

    <style name="radio_btn_tag">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/datecate_text_color</item>
        <item name="android:background">@drawable/datecate_tag_bg</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn.tip">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="btn.supervised">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">216dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.15_000000">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.12_475162">
        <item name="android:textColor">#475162</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.12_FEAA18">
        <item name="android:textColor">#FEAA18</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.supervised_time">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#7D8594</item>
    </style>

    <style name="text.supervised_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#475162</item>
    </style>
</resources>
